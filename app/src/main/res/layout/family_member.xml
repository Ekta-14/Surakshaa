<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_family_member"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="@dimen/card_elvation_dimes"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/white" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_home_family_member_vert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/card_family_member"
        app:layout_constraintGuide_percent="0.25"
        app:layout_constraintTop_toTopOf="@+id/card_family_member" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_home_family_member_hori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/card_family_member"
        app:layout_constraintGuide_percent="0.75"
        app:layout_constraintTop_toTopOf="@+id/card_family_member" />

    <TextView
        android:id="@+id/text_family_member_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:elevation="@dimen/other_elevation_dims"
        android:text="Ekta Jain"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="@+id/guideline_home_family_member_vert"
        app:layout_constraintTop_toTopOf="@+id/card_family_member" />

    <ImageView
        android:id="@+id/image_family_member"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:elevation="@dimen/other_elevation_dims"
        android:src="@drawable/ic_family_member_m"
        app:layout_constraintBottom_toTopOf="@+id/guideline_home_family_member_hori"
        app:layout_constraintLeft_toLeftOf="@+id/card_family_member"
        app:layout_constraintRight_toLeftOf="@+id/guideline_home_family_member_vert"
        app:layout_constraintTop_toTopOf="@+id/card_family_member" />

    <TextView
        android:id="@+id/text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="@dimen/other_elevation_dims"
        android:text="18:40"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="@+id/card_family_member"
        app:layout_constraintTop_toTopOf="@id/card_family_member" />

    <ImageView
        android:id="@+id/image_family_member_loc"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:elevation="@dimen/other_elevation_dims"
        android:src="@drawable/ic_family_member_loc"
        app:layout_constraintLeft_toRightOf="@id/guideline_home_family_member_vert"
        app:layout_constraintTop_toBottomOf="@id/text_family_member_name" />

    <TextView
        android:id="@+id/text_family_member_address"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="@dimen/other_elevation_dims"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/black"
        android:text="C-84, New Panchwati Colony, Ghaziabad, Uttar Pardesh,India-84, New Panchwati Colony, Ghaziabad, Uttar Pardesh,India-84, New Panchwati Colony, Ghaziabad, Uttar Pardesh,India-84, New Panchwati Colony, Ghaziabad, Uttar Pardesh,India-84, New Panchwati Colony, Ghaziabad, Uttar Pardesh,India-84, New Panchwati Colony, Ghaziabad, Uttar Pardesh,India-84, New Panchwati Colony, Ghaziabad, Uttar Pardesh,India-84, New Panchwati Colony, Ghaziabad, Uttar Pardesh,India"
        app:layout_constraintBottom_toTopOf="@+id/guideline_home_family_member_hori"
        app:layout_constraintLeft_toRightOf="@+id/image_family_member_loc"
        app:layout_constraintRight_toRightOf="@+id/card_family_member"
        app:layout_constraintTop_toBottomOf="@+id/text_family_member_name" />

    <LinearLayout
        android:id="@+id/ll_battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="@dimen/other_elevation_dims"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/card_family_member"
        app:layout_constraintLeft_toLeftOf="@id/card_family_member"
        app:layout_constraintRight_toLeftOf="@+id/guideline_home_family_member_vert"
        app:layout_constraintTop_toBottomOf="@+id/guideline_home_family_member_hori"
        android:background="@drawable/battery_background"
        android:padding="2dp"
        >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="3dp"
            android:src="@drawable/ic_family_member_battery"
            android:layout_marginEnd="3dp" />

        <TextView
            android:id="@+id/text_family_member_battery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="94%"
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_family_member_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="@dimen/other_elevation_dims"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/card_family_member"
        app:layout_constraintLeft_toRightOf="@id/guideline_home_family_member_vert"
        app:layout_constraintRight_toLeftOf="@+id/ll_wifi"
        app:layout_constraintTop_toBottomOf="@+id/guideline_home_family_member_hori">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="3dp"
            android:src="@drawable/ic_family_member_share" />

        <TextView
            android:id="@+id/text_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="203k"
            android:textColor="@color/black"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="@dimen/other_elevation_dims"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/card_family_member"
        app:layout_constraintLeft_toRightOf="@id/ll_family_member_share"
        app:layout_constraintRight_toLeftOf="@+id/image_family_member_call"
        app:layout_constraintTop_toBottomOf="@+id/guideline_home_family_member_hori">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="3dp"
            android:src="@drawable/ic_family_member_wifi" />

        <TextView
            android:id="@+id/text_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wifi"
            android:textColor="@color/black"
            />
    </LinearLayout>
    
    <ImageView
        android:id="@+id/image_family_member_call"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="@id/guideline_home_family_member_hori"
        app:layout_constraintRight_toRightOf="@+id/card_family_member"
        app:layout_constraintBottom_toBottomOf="@+id/card_family_member"
        android:layout_marginRight="14dp"
        android:elevation="@dimen/other_elevation_dims"
        android:src="@drawable/ic_family_member_call"
        />
</androidx.constraintlayout.widget.ConstraintLayout>