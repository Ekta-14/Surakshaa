<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_family_member"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="@dimen/card_elvation_dimes"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/white" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_home_family_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/card_family_member"
        app:layout_constraintGuide_percent="0.25"
        app:layout_constraintTop_toTopOf="@+id/card_family_member" />

    <TextView
        android:id="@+id/text_family_member_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:elevation="@dimen/other_elevation_dims"
        android:text="Ekta Jain"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/guideline_home_family_member"
        app:layout_constraintTop_toTopOf="@+id/card_family_member" />

    <ImageView
        android:id="@+id/image_family_member"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:elevation="@dimen/other_elevation_dims"
        android:src="@drawable/ic_family_member_m"
        app:layout_constraintBottom_toBottomOf="@+id/card_family_member"
        app:layout_constraintLeft_toLeftOf="@+id/card_family_member"
        app:layout_constraintRight_toLeftOf="@+id/guideline_home_family_member"
        app:layout_constraintTop_toTopOf="@+id/card_family_member" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginRight="8dp"
        android:elevation="@dimen/card_elvation_dimes"
        android:orientation="horizontal"
        app:layout_constraintLeft_toRightOf="@+id/guideline_home_family_member"
        app:layout_constraintRight_toRightOf="@+id/card_family_member"
        app:layout_constraintTop_toBottomOf="@+id/text_family_member_name">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:elevation="@dimen/other_elevation_dims"
            android:src="@drawable/ic_family_member_loc" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="@dimen/other_elevation_dims"
            android:text="C-84, New Panchwati Colony, Ghaziabad,Uttar Pardesh, India"
            android:textColor="@color/black" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>